.span6
  .login
    = form_tag({:action => 'register'}, :class=>"form-horizontal") do
      %legend Register
      .row-fluid
        .alert.alert-info
          %small Please fill in all required fields
      %table
        %tr
          %td= label_tag(:username)
          %td= text_field_tag(:username)
        %tr
          %td= label_tag("Password")
          %td= password_field_tag(:password)
        %tr
          %td &nbsp;
          %td= submit_tag("Register")
          %td= link_to("Login",:action => "login", :rel => "tooltip", :title =>"Login as registered user")